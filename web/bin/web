# -*- mode: ruby -*-
# vi: set ft=ruby :

if(File.exist?('/usr/mgmt'))
  %w(/usr/mgmt /usr/mgmt/lib).each {|p| $:.push p} 
else
  %w(. lib).each {|p| $:.push p}
end

require 'mgmt'
require 'jmx4r'

class JMX::MBean
  @@connection = java.lang.management.ManagementFactory.getPlatformMBeanServer()
end

Mgmt::App.run!


