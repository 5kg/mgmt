# -*- mode: ruby -*-
# vi: set ft=ruby :

$:.push 'lib'
$:.push '.'
require 'mgmt'

def prod?
  ARGV[0].eql?('prod')
end

t = Thread.new do 
  Mgmt::App.run! 
end

if(prod?)
  require '/java/cli-1.0.jar' 
  java_import com.cloudius.cli.main.RhinoCLI
  RhinoCLI.run(RhinoCLI::ConsoleTTY.new, true, []) if prod?
end

t.join
